<nav class="bg-[#F4F5F0] shadow-lg fixed w-full z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
            <div class="flex items-center">
                <a href="#inicio">
                    <img class="h-10 w-10 rounded-full object-cover" src="/logoaso.png" alt="AIA Logo" />
                </a>
            </div>

            <div class="hidden md:ml-6 md:flex md:items-center md:space-x-8">
                <a href="#inicio" class="text-[#4D40AC] hover:text-[#221965] px-3 py-2 text-sm font-medium transition-colors">Inicio</a>
                <a href="#sobre-nosotros" class="text-[#221965] hover:text-[#4D40AC] px-3 py-2 text-sm font-medium transition-colors">Sobre Nosotros</a>
                <a href="/events" class="text-[#221965] hover:text-[#4D40AC] px-3 py-2 text-sm font-medium transition-colors">Eventos</a>
                <a href="#contacto" class="text-[#221965] hover:text-[#4D40AC] px-3 py-2 text-sm font-medium transition-colors">Contacto</a>
            </div>

            <div class="-mr-2 flex items-center md:hidden">
                <button id="menu-btn" type="button" class="inline-flex items-center justify-center p-2 rounded-md text-[#221965] hover:bg-[#4D40AC] hover:text-[#F4F5F0] focus:outline-none transition-colors" aria-controls="mobile-menu" aria-expanded="false">
                    <span class="sr-only">Abrir men√∫</span>
                    <svg id="icon-menu" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                    <svg id="icon-close" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <div id="mobile-menu" class="hidden md:hidden bg-[#F4F5F0] shadow-lg absolute w-full left-0 top-16 transition-all duration-300 ease-in-out opacity-0 -translate-y-2 origin-top">
        <div class="px-4 py-2 flex flex-col space-y-2 pb-4">
            <a href="#inicio" class="block px-3 py-2 rounded-md text-base font-medium text-[#221965] hover:bg-[#4D40AC] hover:text-[#F4F5F0] transition-colors">Inicio</a>
            <a href="/events" class="block px-3 py-2 rounded-md text-base font-medium text-[#221965] hover:bg-[#4D40AC] hover:text-[#F4F5F0] transition-colors">Eventos</a>
            <a href="#sobre-nosotros" class="block px-3 py-2 rounded-md text-base font-medium text-[#221965] hover:bg-[#4D40AC] hover:text-[#F4F5F0] transition-colors">Sobre nosotros</a>
            <a href="#contacto" class="block px-3 py-2 rounded-md text-base font-medium text-[#221965] hover:bg-[#4D40AC] hover:text-[#F4F5F0] transition-colors">Contacto</a>
        </div>
    </div>
</nav>

<script>
    function setupMenu() {
        const btn = document.getElementById('menu-btn');
        const menu = document.getElementById('mobile-menu');
        const iconMenu = document.getElementById('icon-menu');
        const iconClose = document.getElementById('icon-close');

        if (btn && menu && iconMenu && iconClose) {
            btn.addEventListener('click', () => {
                const isExpanded = btn.getAttribute('aria-expanded') === 'true';
                btn.setAttribute('aria-expanded', String(!isExpanded));

                if (menu.classList.contains('hidden')) {
                    menu.classList.remove('hidden');
                    setTimeout(() => {
                        menu.classList.remove('opacity-0', '-translate-y-2');
                        menu.classList.add('opacity-100', 'translate-y-0');
                    }, 10);
                    iconMenu.classList.add('hidden');
                    iconClose.classList.remove('hidden');
                } else {
                    menu.classList.remove('opacity-100', 'translate-y-0');
                    menu.classList.add('opacity-0', '-translate-y-2');
                    setTimeout(() => { menu.classList.add('hidden'); }, 300);
                    iconMenu.classList.remove('hidden');
                    iconClose.classList.add('hidden');
                }
            });
        }
    }
    setupMenu();
    document.addEventListener('astro:after-swap', setupMenu);
</script>